{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Localization": {
    "DefaultCulture": "cs",
    "SupportedCultures": [ "cs", "en" ]
  },
  "Authentication": {
    "Authority": "https://localhost:7056",
    "ClientId": "my-public-client",
    "ResponseType": "code",
    "SaveTokens": true,
    "RequireHttpsMetadata": true,
    "RedirectUri": "https://localhost:7104/signin-oidc",
    "PostLogoutRedirectUri": "https://localhost:7104/signout-callback-oidc",
    "Scopes": [ "openid", "profile", "email", "erp_api" ]
  }
}

